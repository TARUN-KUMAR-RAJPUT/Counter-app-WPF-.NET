<Window x:Class="CounterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button x:Name="click" Content="Increase Count" HorizontalAlignment="Left" Margin="459,295,0,0" VerticalAlignment="Top" Height="35" Width="91" FontWeight="Bold" Click="click_Click" Background="#FF35B391" RenderTransformOrigin="1.165,0.833"/>
        <TextBox x:Name="textbx" HorizontalAlignment="Center" Margin="0,68,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Height="190" Background="#FF5368C3" FontWeight="Bold" TextAlignment="Center" FontSize="150"/>
        <Button x:Name="resetBt" Content="Reset" HorizontalAlignment="Left" Margin="232,295,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.454,3.679" Height="35" Width="101" Background="#FFF1E317" FontWeight="Bold" Click="resetBt_Click"/>

    </Grid>
</Window>
